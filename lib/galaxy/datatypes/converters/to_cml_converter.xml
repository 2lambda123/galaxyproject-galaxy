<tool id="CONVERTER_to_cml" name="InChI, mol, mol2, sdf, smi to CML" version="2.4.1">
    <description></description>
    <!-- <parallelism method="multi" split_inputs="input" split_mode="to_size" split_size="10000" shared_inputs="" merge_outputs="output"></parallelism> -->
    <requirements>
        <requirement type="package" version="2.4.1">openbabel</requirement>
    </requirements>
    <command><![CDATA[
        obabel -i$input.ext '${input}' -ocml -O '${output}' -e 2>&1
    ]]></command>
    <inputs>
        <param name="input" type="data" format="inchi,mol,mol2,sdf,smi" label="Molecules in InChI, mol, mol2, sdf or smi format"/>
    </inputs>
    <outputs>
        <data name="output" format="cml"/>
    </outputs>
    <tests>
        <test>
            <param name="input" ftype="inchi" value="drugbank_drugs.inchi"/>
            <output name="output" ftype="cml">
                <assert_contents>
                    <is_valid_xml/>
                    <has_text text="http://www.xml-cml.org/schema"/>
                    <has_text text="xml version"/>
                    <has_text text="atomArray"/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="mol" value="chebi_57262.v3k.mol"/>
            <output name="output" ftype="cml">
                <assert_contents>
                    <is_valid_xml/>
                    <has_text text="http://www.xml-cml.org/schema"/>
                    <has_text text="xml version"/>
                    <has_text text="atomArray"/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="mol2" value="drugbank_drugs.mol2"/>
            <output name="output" ftype="cml">
                <assert_contents>
                    <is_valid_xml/>
                    <has_text text="http://www.xml-cml.org/schema"/>
                    <has_text text="xml version"/>
                    <has_text text="atomArray"/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="sdf" value="drugbank_drugs.sdf"/>
            <output name="output" ftype="cml">
                <assert_contents>
                    <is_valid_xml/>
                    <has_text text="http://www.xml-cml.org/schema"/>
                    <has_text text="xml version"/>
                    <has_text text="atomArray"/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="smi" value="drugbank_drugs.smi"/>
            <output name="output" ftype="cml">
                <assert_contents>
                    <is_valid_xml/>
                    <has_text text="http://www.xml-cml.org/schema"/>
                    <has_text text="xml version"/>
                    <has_text text="atomArray"/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help>
<![CDATA[
]]>
    </help>
</tool>
