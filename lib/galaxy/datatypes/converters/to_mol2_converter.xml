
<tool id="CONVERTER_to_MOL2" name="cml, inchi, mol, sdf, SMILES to MOL2" version="2.4.1">
    <description></description>
    <!-- <parallelism method="multi" split_inputs="input" split_mode="to_size" split_size="10000" shared_inputs="" merge_outputs="output"></parallelism> -->
    <requirements>
        <requirement type="package" version="2.4.1">openbabel</requirement>
    </requirements>
    <command><![CDATA[
        obabel -i$input.ext '${input}' -omol2 -O '${output}' -e 2>&1
    ]]></command>
    <inputs>
        <param name="input" type="data" format="cml,inchi,mol,sdf,smi" label="Molecules in cml, inchi, mol, sdf, or SMILES format"/>
    </inputs>
    <outputs>
        <data name="output" format="mol2"/>
    </outputs>
    <tests>
        <test>
            <param name="input" ftype="cml" value="drugbank_drugs.cml"/>
            <output name="output" ftype="mol2">
                <assert_contents>
                    <has_text text="Desmopressin"/>
                    <has_text text="BOND"/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="inchi" value="drugbank_drugs.inchi"/>
            <output name="output" ftype="mol2">
                <assert_contents>
                    <has_text text="MOLECULE"/>
                    <has_text text="BOND"/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="mol" value="chebi_57262.v3k.mol"/>
            <output name="output" ftype="mol2">
                <assert_contents>
                    <has_text text="CHEBI:57262"/>
                    <has_text text="BOND"/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="sdf" value="drugbank_drugs.sdf"/>
            <output name="output" ftype="mol2">
                <assert_contents>
                    <has_text text="Goserelin"/>
                    <has_text text="BOND"/>
                </assert_contents>
            </output>
        </test>
        <test>
            <param name="input" ftype="smi" value="drugbank_drugs.smi"/>
            <output name="output" ftype="mol2">
                <assert_contents>
                    <has_text text="Goserelin"/>
                    <has_text text="BOND"/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help>
<![CDATA[
]]>
    </help>
</tool>