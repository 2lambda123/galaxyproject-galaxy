<tool id="retrieveThumbnails" name="Retrieve Thumbnails" version="1.0.0">
    <description>Retrieve Thumbnails from OMERO for Visualization</description>
    <command>
      mkdir -p ${html_file.files_path}/data/images;
      python2.7 $__tool_directory__/omero_fetch.py $input --dataset_id=#{html_file.dataset.dataset.id} --history_id=#{html_file.creating_job.history.id} --output_files_path=${html_file.files_path}
    </command>
    <inputs>
      <param name="input" type="data" label="input"/>
    </inputs>
    <outputs>
        <data format="html" name="html_file" label="myToolOutput_${tool.name}.html"/>
    </outputs>
    <help>
.. class:: infomark
        
**Retrieve Thumbnails from OMERO Servers**

    </help>
</tool>
