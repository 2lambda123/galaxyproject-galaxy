<tool id="average" name="求平均值" version="0.1.0">
  <description> for all column in a file </description>
  <command>python '${__tool_directory__}/joint.py' '$input1'  '$output'</command>
  <inputs>
    <param format="tabular" name="input1" type="data" label="输入文件1"/>
    
  </inputs>
  <outputs>
    <data format="tabular" name="output" label="输出文件"/>
  </outputs>

  <tests>
    <test>
      <param name="input" value="fa_gc_content_input.fa"/>
      <output name="out_file1" file="fa_gc_content_output.txt"/>
    </test>
  </tests>

  <help>
    这个工具用于计算整列平均值
  </help>
</tool>